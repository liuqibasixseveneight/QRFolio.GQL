generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider    = "postgresql"
  url      = env("EXTERNAL_DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
}

enum ProfileAccessLevel {
  public
  private
  restricted
}

model Profile {
  id                  String            @id
  fullName            String
  phone               Json?                         // Stores either structured phone object or legacy string
  email               String
  linkedin            String?  
  portfolio           String?  
  professionalSummary String
  availability        String?
  workExperience      Json                          // Stores array of workExperience objects
  education           Json                          // Stores array of education objects
  languages           Json                          // Stores array of language objects
  skills              Json?                         // Stores array of SkillCategory objects with nested skills
  accessLevel         ProfileAccessLevel @default(public)
  showName            Boolean           @default(true)
  showEmail           Boolean           @default(true)
  showPhone           Boolean           @default(true)
  showLinkedIn        Boolean           @default(true)
  showPortfolio       Boolean           @default(true)
  showWorkExperience  Boolean           @default(true)
  showEducation       Boolean           @default(true)
  showLanguages       Boolean           @default(true)
  showSkills          Boolean           @default(true)
  permittedUsers      String[]          @default([])
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
}
