generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("EXTERNAL_DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
}

model Profile {
  id                  String   @id
  fullName            String
  phone               Json?                         // Stores either structured phone object or legacy string
  email               String
  linkedin            String?  
  portfolio           String?  
  professionalSummary String
  availability        String?
  workExperience      Json                          // Stores array of workExperience objects
  education           Json                          // Stores array of education objects
  languages           Json                          // Stores array of language objects
  skills              Json?                         // Stores array of skill strings
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
